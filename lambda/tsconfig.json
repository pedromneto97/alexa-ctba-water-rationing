{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "lambda"
    },
    "exclude": [
        "local-debugger.js",
    ],
    "include": [
        "src/**/*.ts"
    ]
}
